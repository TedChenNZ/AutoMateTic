<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".HomeActivity$PlaceholderFragment"
    android:orientation="vertical"
>




    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="-"
            android:id="@+id/hourminus"
            android:layout_row="0"
            android:layout_column="0"
            android:layout_gravity="top"
            android:layout_weight="1"
            android:onClick="hourMinus" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Hour"
            android:id="@+id/textView3"
            android:layout_row="0"
            android:layout_column="1"
            android:layout_weight="1"
            android:gravity="center"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+"
            android:id="@+id/hourplus"
            android:layout_row="0"
            android:layout_column="2"
            android:layout_weight="1"
            android:onClick="hourPlus" />
        </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="-"
            android:id="@+id/dayminus"
            android:layout_row="0"
            android:layout_column="0"
            android:layout_gravity="top"
            android:layout_weight="1"
            android:onClick="dayMinus" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Day"
            android:id="@+id/textView2"
            android:layout_row="0"
            android:layout_column="1"
            android:layout_weight="1"
            android:gravity="center"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+"
            android:id="@+id/dayplus"
            android:layout_row="0"
            android:layout_column="2"
            android:layout_weight="1"
            android:onClick="dayPlus" />
    </LinearLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Delete Database"
        android:id="@+id/button6"
        android:layout_gravity="center"
        android:onClick="deleteDb" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Large Text"
        android:id="@+id/timeDisp"
        android:layout_gravity="center_horizontal" />

</LinearLayout>
